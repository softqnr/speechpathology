<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:b="clr-namespace:SpeechPathology.Behaviors"
             x:Class="SpeechPathology.Views.MasterView"
             Title="Speech Pathology Tools">
    <StackLayout>
        <ListView x:Name="MenuItemsListView"
                  SeparatorVisibility="None"
                  HasUnevenRows="true"
                  ItemsSource="{Binding MenuItems}">
            <ListView.Behaviors>
                <b:EventToCommandBehavior Command="{Binding NavigationItemSelectedCommand}" 
                                          EventName="ItemTapped"/>
            </ListView.Behaviors>
            <ListView.Header>
                <Grid BackgroundColor="{StaticResource primary}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackLayout Grid.Column="1"
                                 Grid.Row="1"
                                 VerticalOptions="End">
                        <Label TextColor="White"
                               Text="{Binding ProjectTitle}"
                               FontSize="Large"
                               Style="{DynamicResource SubtitleStyle}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Grid.Column="1"
                                 Grid.Row="3"
                                 Padding="6">
                        <Image Source="facebook_icon.png"
                               WidthRequest="40"
                               HeightRequest="40" >
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LinkTappedCommand}"
                                                      CommandParameter="{StaticResource facebookUrl}"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Source="home_icon.png"
                               WidthRequest="40"
                               HeightRequest="40">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LinkTappedCommand}"
                                                      CommandParameter="{StaticResource homePageUrl}"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Source="mail_icon.png"
                               WidthRequest="40"
                               HeightRequest="40">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LinkTappedCommand}"
                                                      CommandParameter="{StaticResource email}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </StackLayout>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding IconSource}" />
                            <Label Grid.Column="1"
                                   Text="{Binding Title}"
                                   FontSize="Large"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ContentView Padding="5">
            <Label HorizontalOptions="End"
                   VerticalOptions="EndAndExpand">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Version}"
                              FontSize="Micro" />
                        <Span Text="{Binding Language}"
                              FontSize="Micro" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </ContentView>
    </StackLayout>
</ContentPage>